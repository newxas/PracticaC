        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Pasword)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TipoUsuario)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TipoUsuario)

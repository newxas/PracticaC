@model PracticaC_.Models.Usuarios

@{
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<section class="vh-100 gradient-custom">
    <form asp-action="Login"> 
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                <div class="card bg-dark text-white" style="border-radius: 1rem;">
                    <div class="card-body p-5 text-center">

                        <div class="mb-md-5 mt-md-4 pb-5">

                            <h2 class="fw-bold mb-2 text-uppercase">Bienvenido</h2>
                            
                            <div class="form-outline form-white mb-4 mt-5">
                                 
                                 <input asp-for="Usuario" class="form-control form-control-lg" />
                                 <label class="form-label">Usuario</label>
                                 <span asp-validation-for="Usuario" class="text-danger"></span>
                                
                            </div>

                            <div class="form-outline form-white mb-4">
                                <input asp-for="Pasword" class="form-control form-control-lg" type="Password" />
                                <label class="form-label">Password</label>
                                <span asp-validation-for="Pasword" class="text-danger"></span>
                            </div>
                        
                            <button class="btn btn-outline-light btn-lg px-5" type="submit">Iniciar Sesión</button>
                            @* <input type="submit" value="Ingresar" class="btn btn-primary" />  *@                   

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </form>
</section>